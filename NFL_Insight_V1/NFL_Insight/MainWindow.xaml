<Window x:Class="NFL_Insight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NFL Insight - Scoreboard"
        Height="900" Width="1400"
        Background="#0f0f0f"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryRed" Color="#d60a0a"/>
        <SolidColorBrush x:Key="BackgroundDark" Color="#0f0f0f"/>
        <SolidColorBrush x:Key="CardDark" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="BorderDark" Color="#333333"/>
        <SolidColorBrush x:Key="AccentDark" Color="#2a2a2a"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#f1f5f9"/>
        <SolidColorBrush x:Key="TextMuted" Color="#94a3b8"/>
        <SolidColorBrush x:Key="GreenWin" Color="#22c55e"/>

        <!-- Nav Item Style -->
        <Style x:Key="NavItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2a2a2a"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Nav Item Style -->
        <Style x:Key="NavItemActiveStyle" TargetType="Button" BasedOn="{StaticResource NavItemStyle}">
            <Setter Property="Background" Value="#3d0202"/>
            <Setter Property="Foreground" Value="#d60a0a"/>
        </Style>

        <!-- Score Card Style -->
        <Style x:Key="ScoreCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1e1e1e"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>

        <!-- Week Button Style -->
        <Style x:Key="WeekButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="999" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Week Button Style -->
        <Style x:Key="WeekButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource WeekButtonStyle}">
            <Setter Property="Background" Value="#d60a0a"/>
            <Setter Property="BorderBrush" Value="#d60a0a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Black"/>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="Padding" Value="24,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Tab Button Style -->
        <Style x:Key="TabButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="#d60a0a"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- ===================== SIDEBAR ===================== -->
        <Border Grid.Column="0"
                Background="#0f0f0f"
                BorderBrush="#333333"
                BorderThickness="0,0,1,0">
            <DockPanel>

                <!-- Logo / Brand -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"
                            Margin="24,24,24,16" VerticalAlignment="Center">
                    <Border Background="#d60a0a" CornerRadius="8" Padding="6" Margin="0,0,12,0">
                        <TextBlock Text="🏈" FontSize="22" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="NFL Insight" Foreground="White"
                                   FontSize="17" FontWeight="Black"/>
                        <TextBlock Text="SEASON 2024" Foreground="#64748b"
                                   FontSize="9" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <!-- Bottom User Panel -->
                <Border DockPanel.Dock="Bottom"
                        BorderBrush="#333333" BorderThickness="0,1,0,0"
                        Padding="16">
                    <Border Background="#2a2a2a" CornerRadius="8" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="32" Height="32"
                                    CornerRadius="999" Background="#374151"
                                    Margin="0,0,10,0" VerticalAlignment="Center">
                                <TextBlock Text="👤" FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="John Madden" Foreground="White"
                                           FontSize="12" FontWeight="Bold"/>
                                <TextBlock Text="Pro Account" Foreground="#64748b"
                                           FontSize="10"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="⚙" Foreground="#64748b"
                                       FontSize="14" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Border>

                <!-- Navigation Links -->
                <StackPanel DockPanel.Dock="Top" Margin="16,8,16,0">

                    <!-- Scoreboard (active) -->
                    <Button Style="{StaticResource NavItemActiveStyle}" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Scoreboard" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Calendar -->
                    <Button Style="{StaticResource NavItemStyle}" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Calendar" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Teams -->
                    <Button Style="{StaticResource NavItemStyle}" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Teams" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Favorites -->
                    <Button Style="{StaticResource NavItemStyle}" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⭐" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Favorites" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ===================== MAIN CONTENT ===================== -->
        <DockPanel Grid.Column="1">

            <!-- Header -->
            <Border DockPanel.Dock="Top"
                    Background="#0f0f0f"
                    BorderBrush="#333333"
                    BorderThickness="0,0,0,1"
                    Padding="32,24">
                <StackPanel>

                    <!-- Title Row -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Title -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="NFL Scoreboard" Foreground="White"
                                       FontSize="28" FontWeight="Black"/>
                            <TextBlock Text="Regular Season • Sunday, Nov 24"
                                       Foreground="#64748b" FontSize="13" FontWeight="Medium"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Tab Switcher -->
                        <Border Grid.Column="1" Background="#2a2a2a"
                                CornerRadius="12" Padding="4" Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Scoreboard" Style="{StaticResource TabButtonActiveStyle}"/>
                                <Button Content="Standings" Style="{StaticResource TabButtonStyle}"/>
                                <Button Content="Stats" Style="{StaticResource TabButtonStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- Live Toggle -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="LIVE ONLY" Foreground="#d60a0a"
                                       FontSize="11" FontWeight="Bold"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <ToggleButton IsChecked="True" Width="44" Height="24"
                                         Background="#d60a0a" BorderThickness="0"
                                         Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="999" Width="44" Height="24">
                                            <Ellipse Width="18" Height="18"
                                                     Fill="White" Margin="22,0,0,0"
                                                     HorizontalAlignment="Left"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </StackPanel>
                    </Grid>

                    <!-- Week Selector -->
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Week 10" Style="{StaticResource WeekButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="Week 11" Style="{StaticResource WeekButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="Week 12 (Current)" Style="{StaticResource WeekButtonActiveStyle}" Margin="0,0,8,0"/>
                            <Button Content="Week 13" Style="{StaticResource WeekButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="Week 14" Style="{StaticResource WeekButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="Week 15" Style="{StaticResource WeekButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="Week 16" Style="{StaticResource WeekButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="Postseason" Style="{StaticResource WeekButtonStyle}" Margin="0,0,8,0"/>
                        </StackPanel>
                    </ScrollViewer>

                </StackPanel>
            </Border>

            <!-- Scrollable Content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- ===== SCORES GRID ===== -->
                    <StackPanel Grid.Column="0" Margin="0,0,32,0">

                        <!-- Live Now Heading -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Ellipse Width="8" Height="8" Fill="#d60a0a"
                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Live Now" Foreground="White"
                                       FontSize="17" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Live Cards Grid -->
                        <UniformGrid Columns="2" Margin="0,0,0,32">

                            <!-- Live Card 1: Giants vs Eagles -->
                            <Border Style="{StaticResource ScoreCardStyle}" Margin="0,0,12,0" Cursor="Hand">
                                <!-- Card Header -->
                                <StackPanel>
                                    <Border Background="#2a2a2a" CornerRadius="12,12,0,0" Padding="16,12">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Fill="#d60a0a"
                                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="LIVE – 3rd Quarter (10:42)"
                                                       Foreground="#d60a0a"
                                                       FontSize="10" FontWeight="Black"/>
                                        </StackPanel>
                                    </Border>
                                    <!-- Scores -->
                                    <StackPanel Margin="24,20,24,20">
                                        <!-- Giants Row -->
                                        <Grid Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    Background="#2a2a2a" CornerRadius="8"
                                                    Margin="0,0,14,0">
                                                <TextBlock Text="NYG" Foreground="#94a3b8"
                                                           FontSize="9" FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Giants"
                                                       Foreground="White" FontSize="16"
                                                       FontWeight="Bold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="14"
                                                       Foreground="#94a3b8" FontSize="24"
                                                       FontWeight="Black" VerticalAlignment="Center"/>
                                        </Grid>
                                        <!-- Eagles Row -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    Background="#2a2a2a" CornerRadius="8"
                                                    Margin="0,0,14,0">
                                                <TextBlock Text="PHI" Foreground="#d60a0a"
                                                           FontSize="9" FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Eagles"
                                                       Foreground="White" FontSize="16"
                                                       FontWeight="Bold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="24"
                                                       Foreground="#d60a0a" FontSize="24"
                                                       FontWeight="Black" VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                    <!-- Card Footer -->
                                    <Border Background="#1a1a1a" CornerRadius="0,0,12,12" Padding="16,10">
                                        <Grid>
                                            <TextBlock Text="2nd &amp; 10 at NYG 45"
                                                       Foreground="#64748b" FontSize="11"
                                                       FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                            <Border Background="#374151" CornerRadius="4"
                                                    Padding="8,3" HorizontalAlignment="Right">
                                                <TextBlock Text="POSS: PHI" Foreground="#cbd5e1"
                                                           FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Live Card 2: Cowboys vs Jets -->
                            <Border Style="{StaticResource ScoreCardStyle}" Cursor="Hand">
                                <StackPanel>
                                    <Border Background="#2a2a2a" CornerRadius="12,12,0,0" Padding="16,12">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Fill="#d60a0a"
                                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="LIVE – 2nd Quarter (02:15)"
                                                       Foreground="#d60a0a"
                                                       FontSize="10" FontWeight="Black"/>
                                        </StackPanel>
                                    </Border>
                                    <StackPanel Margin="24,20,24,20">
                                        <!-- Cowboys Row -->
                                        <Grid Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    Background="#2a2a2a" CornerRadius="8"
                                                    Margin="0,0,14,0">
                                                <TextBlock Text="DAL" Foreground="#d60a0a"
                                                           FontSize="9" FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Cowboys"
                                                       Foreground="White" FontSize="16"
                                                       FontWeight="Bold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="10"
                                                       Foreground="#d60a0a" FontSize="24"
                                                       FontWeight="Black" VerticalAlignment="Center"/>
                                        </Grid>
                                        <!-- Jets Row -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    Background="#2a2a2a" CornerRadius="8"
                                                    Margin="0,0,14,0">
                                                <TextBlock Text="NYJ" Foreground="#94a3b8"
                                                           FontSize="9" FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Jets"
                                                       Foreground="White" FontSize="16"
                                                       FontWeight="Bold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="7"
                                                       Foreground="#94a3b8" FontSize="24"
                                                       FontWeight="Black" VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                    <Border Background="#1a1a1a" CornerRadius="0,0,12,12" Padding="16,10">
                                        <Grid>
                                            <TextBlock Text="1st &amp; Goal at NYJ 5"
                                                       Foreground="#64748b" FontSize="11"
                                                       FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                            <Border Background="#374151" CornerRadius="4"
                                                    Padding="8,3" HorizontalAlignment="Right">
                                                <TextBlock Text="POSS: DAL" Foreground="#cbd5e1"
                                                           FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Scheduled / Final Heading -->
                        <TextBlock Text="Scheduled / Final" Foreground="#64748b"
                                   FontSize="17" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Final + Scheduled Cards -->
                        <UniformGrid Columns="2">

                            <!-- Final Card: Chiefs vs Bills -->
                            <Border Style="{StaticResource ScoreCardStyle}"
                                    Opacity="0.6" Margin="0,0,12,0">
                                <StackPanel>
                                    <Border Background="#1a1a1a" CornerRadius="12,12,0,0" Padding="16,12">
                                        <Grid>
                                            <TextBlock Text="FINAL" Foreground="#64748b"
                                                       FontSize="10" FontWeight="Black" HorizontalAlignment="Left"/>
                                            <TextBlock Text="CBS" Foreground="#64748b"
                                                       FontSize="10" FontWeight="Bold"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Margin="24,20,24,20">
                                        <Grid Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    Background="#2a2a2a" CornerRadius="8"
                                                    Margin="0,0,14,0" Opacity="0.5">
                                                <TextBlock Text="KC" Foreground="#94a3b8"
                                                           FontSize="10" FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Chiefs"
                                                       Foreground="#64748b" FontSize="16"
                                                       FontWeight="Bold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="31"
                                                       Foreground="#f1f5f9" FontSize="24"
                                                       FontWeight="Black" VerticalAlignment="Center"/>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    Background="#2a2a2a" CornerRadius="8"
                                                    Margin="0,0,14,0" Opacity="0.5">
                                                <TextBlock Text="BUF" Foreground="#94a3b8"
                                                           FontSize="10" FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Bills"
                                                       Foreground="#64748b" FontSize="16"
                                                       FontWeight="Bold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="27"
                                                       Foreground="#64748b" FontSize="24"
                                                       FontWeight="Black" VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Scheduled Card: 49ers vs Seahawks -->
                            <Border Style="{StaticResource ScoreCardStyle}">
                                <StackPanel>
                                    <Border Background="#1a1a1a" CornerRadius="12,12,0,0" Padding="16,12">
                                        <Grid>
                                            <TextBlock Text="SCHEDULED – 8:15 PM"
                                                       Foreground="#64748b"
                                                       FontSize="10" FontWeight="Black" HorizontalAlignment="Left"/>
                                            <TextBlock Text="NBC" Foreground="#64748b"
                                                       FontSize="10" FontWeight="Bold"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Margin="24,20,24,20">
                                        <Grid Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    Background="#2a2a2a" CornerRadius="8"
                                                    Margin="0,0,14,0">
                                                <TextBlock Text="SF" Foreground="#94a3b8"
                                                           FontSize="10" FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="49ers"
                                                       Foreground="White" FontSize="16"
                                                       FontWeight="Bold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="—"
                                                       Foreground="#475569" FontSize="24"
                                                       FontWeight="Black" VerticalAlignment="Center"/>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    Background="#2a2a2a" CornerRadius="8"
                                                    Margin="0,0,14,0">
                                                <TextBlock Text="SEA" Foreground="#94a3b8"
                                                           FontSize="10" FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Seahawks"
                                                       Foreground="White" FontSize="16"
                                                       FontWeight="Bold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="—"
                                                       Foreground="#475569" FontSize="24"
                                                       FontWeight="Black" VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </UniformGrid>
                    </StackPanel>

                    <!-- ===== RIGHT PANEL ===== -->
                    <StackPanel Grid.Column="1">

                        <!-- Game of the Week Card -->
                        <Border CornerRadius="12" Margin="0,0,0,20" Padding="24">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#d60a0a" Offset="0"/>
                                    <GradientStop Color="#7f1d1d" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel>
                                <TextBlock Text="GAME OF THE WEEK"
                                           Foreground="#fca5a5" FontSize="9"
                                           FontWeight="Black"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="Packers @ Lions"
                                           Foreground="White" FontSize="20"
                                           FontWeight="Black" Margin="0,0,0,20"/>

                                <!-- Teams -->
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Packers -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <Border Width="48" Height="48" CornerRadius="999"
